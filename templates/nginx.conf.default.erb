server {
    listen  80;
    server_name <%= @server_names.join(' ') %>;

    location / {
        root  <%= @www_root %>;
        index <%= @index.join(' ') %>;
        try_files $uri $uri/ =404;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root  /usr/share/nginx/html;
    }
}

